@model TPFinalFernandaBuffa.Models.Itinerario

@{
    ViewData["Title"] = "Detalles del Itinerario";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Detalles del Itinerario</h1>

    <div>
        <h4>Itinerario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaFin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
        </dl>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
