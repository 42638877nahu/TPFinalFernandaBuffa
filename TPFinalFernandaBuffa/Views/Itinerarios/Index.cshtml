@model IEnumerable<TPFinalFernandaBuffa.Models.Itinerario>

@{
    ViewData["Title"] = "Itinerarios";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Itinerarios</h1>

    <p>
        <a class="btn btn-primary mb-3" asp-action="Create">Crear Nuevo Itinerario</a>
    </p>

    <table class="table table-striped table-hover">
        <thead style="background-color: black; color: white;">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
                <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
                <th>@Html.DisplayNameFor(model => model.Usuario.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                    <td>@Html.DisplayFor(modelItem => item.Usuario.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td class="text-center">
                        <a class="btn btn-sm" style="background-color: #17a2b8; color: white;" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
