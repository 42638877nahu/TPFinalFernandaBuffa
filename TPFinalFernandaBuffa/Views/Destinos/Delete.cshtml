@model TPFinalFernandaBuffa.Models.Destino

@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-4 text-center">Delete</h1> <!-- Título centrado con margen superior -->

<h3 class="text-center">Are you sure you want to delete this?</h3> <!-- Texto de confirmación centrado -->
<div class="row">
    <div class="col-md-6 offset-md-3">
        <!-- Centrado y ajuste de tamaño -->
        <h4 class="my-3">Destino</h4> <!-- Subtítulo con margen -->
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                <!-- Ajuste de columnas -->
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Ubicacion)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Ubicacion)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Fotografia)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Fotografia)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <!-- Centrado del formulario -->
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger mx-2" /> <!-- Botón de eliminación -->
            <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a> <!-- Botón de regreso -->
        </form>
    </div>
</div>
