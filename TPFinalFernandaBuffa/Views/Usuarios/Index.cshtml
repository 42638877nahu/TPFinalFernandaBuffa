@model IEnumerable<TPFinalFernandaBuffa.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Usuarios</h1>

<p>
    <a class="btn btn-primary mb-3" asp-action="Create">Crear Nuevo Usuario</a>
</p>

<table class="table table-striped table-hover">
    <thead style="background-color: black; color: white;">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().CorreoElectronico)</th>
            <th>@Html.DisplayNameFor(model => model.First().Fotografia)</th>
            <th class="text-center">Acciones</th> <!-- Alineación del encabezado -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                    <td>
                        <img src="@item.Fotografia" alt="Foto de @item.Nombre" class="img-thumbnail" width="100" height="100" />
                    </td>
                    <td class="text-center">
                        <!-- Alineación de botones -->
                        <a class="btn btn-sm" style="background-color: #17a2b8; color: white;" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay usuarios disponibles.</td>
            </tr>
        }
    </tbody>
</table>
