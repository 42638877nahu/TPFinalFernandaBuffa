@model TPFinalFernandaBuffa.Models.Comentario

@{
    ViewData["Title"] = "Create";
}

<h1 class="my-4">Create</h1>

<h4>Comentario</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <!-- Centrado y ajustado el ancho -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div> <!-- Se utiliza alert para mensajes de error -->

            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="@(ViewData["UsuarioId"] as SelectList)"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DestinoId" class="control-label"></label>
                <select asp-for="DestinoId" class="form-control" asp-items="@(ViewData["DestinoId"] as SelectList)"></select>
                <span asp-validation-for="DestinoId" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <!-- Centrado del botón -->
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Botón con estilo Bootstrap -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
