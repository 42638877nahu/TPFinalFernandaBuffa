@model TPFinalFernandaBuffa.Models.Comentario

@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-4 text-center">Delete</h1> <!-- Título centrado -->

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3> <!-- Mensaje de advertencia en rojo -->

<div class="container">
    <h4 class="my-3">Comentario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.Id)
        </dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <!-- Centramos el formulario -->
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger mx-2" /> <!-- Botón de eliminar en rojo con espacio -->
        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a> <!-- Botón de regreso en gris -->
    </form>
</div>
