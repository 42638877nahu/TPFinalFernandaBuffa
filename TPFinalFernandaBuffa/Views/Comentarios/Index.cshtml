@model IEnumerable<TPFinalFernandaBuffa.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="mb-4">Comentarios</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Comentario</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark" style="background-color: black; color: white;">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Texto)</th>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                <th>@Html.DisplayNameFor(model => model.Destino)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Texto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.Nombre)</td> <!-- Ajuste para mostrar el nombre del usuario -->
                        <td>@Html.DisplayFor(modelItem => item.Destino.Nombre)</td> <!-- Ajuste para mostrar el nombre del destino -->
                        <td class="text-center">
                            <a class="btn btn-sm" style="background-color: #17a2b8; color: white;" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
